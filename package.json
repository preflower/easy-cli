{
  "name": "@preflower/cli",
  "version": "2.2.2",
  "description": "A easy way to create linter/release/git standard cli",
  "type": "module",
  "bin": {
    "@preflower/cli": "./dist/cli.js"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "pkgroll --src ./",
    "ci:version": "pnpm changeset version && pnpm install --lockfile-only",
    "ci:publish": "pnpm build && pnpm changeset publish"
  },
  "author": "Ted Lin <preflower.lin+npm@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "chalk": "^5.3.0",
    "eslint": "^8.46.0",
    "eslint-config-ted": "^2.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prompts": "^2.4.2",
    "pkgroll": "^1.10.0",
    "stylelint": "^15.10.2",
    "stylelint-config-sass-guidelines": "^10.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": [
      "eslint --fix"
    ],
    "*.{css,scss,vue}": [
      "stylelint --fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/cli.js",
    "template"
  ],
  "repository": "https://github.com/preflower/easy-cli",
  "bugs": {
    "url": "https://github.com/preflower/easy-cli/issues"
  },
  "homepage": "https://github.com/preflower/easy-cli#readme",
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "selector-max-id": null
    }
  }
}
