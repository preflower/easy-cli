{
  "packageRules": [
    {
      "matchPackagePatterns": ["^stylelint"],
      "groupName": "stylelint"
    },
    {
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "bump"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "extends": ["config:base"],
  "ignoreTests": true
}
