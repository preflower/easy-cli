{
  "packageRules": [
    {
      "groupName": "stylelint",
      "matchPackagePatterns": [
        "^angular"
      ]
    },
    {
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "bump"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "extends": ["config:base"],
  "ignoreTests": true
}
