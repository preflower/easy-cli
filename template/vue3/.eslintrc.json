{
  "parser": "vue-eslint-parser",
  "extends": ["plugin:vue/vue3-strongly-recommended", "standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "extraFileExtensions": [".vue"]
  },
  "plugins": ["vue"],
  "rules": {
    "no-void": ["error", { "allowAsStatement": true }],
    "vue/no-use-v-if-with-v-for": "off"
  }
}
